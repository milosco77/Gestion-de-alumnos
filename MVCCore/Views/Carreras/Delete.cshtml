@model MVCCore.DatabaseFirstModel.Carreras

@{
    ViewData["Title"] = "Borrar carrera";
}

<h1>Borrar</h1>

<h3>Esta seguro de que quiere borrar esto?</h3>
<div>
    <h4>Carreras</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarreraId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarreraId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno)
        </dt>
        <dd class="col-sm-10">
            @{
                string nombreCompleto = $"{Model.Alumno.Nombre} {Model.Alumno.Apellido}";
                @Html.DisplayFor(modelItem => nombreCompleto)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ListadoCarreras)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListadoCarreras.Nombre)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AlumnoId" />
        <input type="hidden" asp-for="ListadoCarrerasId" />
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver al listado</a>
    </form>
</div>
