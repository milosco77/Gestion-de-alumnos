@model MVCCore.DatabaseFirstModel.Carreras

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Carreras</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CarreraId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarreraId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Alumno)
        </dt>
        <dd class="col-sm-10">
            @{
                string nombreCompleto = $"{Model.Alumno.Nombre} {Model.Alumno.Apellido}";
                @Html.DisplayFor(modelItem => nombreCompleto)
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ListadoCarreras)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ListadoCarreras.Nombre)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.AlumnoId, ListadoCarrerasId = Model.ListadoCarrerasId }) |
    <a asp-action="Index">Volver al listado</a>
</div>
