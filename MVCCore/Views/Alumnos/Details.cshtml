@model MVCCore.DatabaseFirstModel.Alumnos

@{
    ViewData["Title"] = "Detalles del alumno";
}

<h1>Detalles</h1>

<div>
    <h4>Alumnos</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AlumnoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AlumnoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Edad)
        </dt>
        <dd class="col-sm-10">
            @{
                string edad = $"{Model.Edad} años";
                @Html.DisplayFor(modelItem => edad)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dni)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AlumnoId">Editar</a> |
    <a asp-action="Index">Volver al listado</a>
</div>
