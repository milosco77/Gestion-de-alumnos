@model IEnumerable<MVCCore.DatabaseFirstModel.Asignaturas>

@{
    ViewData["Title"] = "Inicio";
}

<h1>Inicio</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AsignaturaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioEntrada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alumno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListadoAsignaturas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AsignaturaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioSalida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dias)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alumno.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrera.CarreraId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ListadoAsignaturas.Nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.ListadoAsignaturasId, alumnoID = item.AlumnoId }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.ListadoAsignaturasId, alumnoID = item.AlumnoId }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.ListadoAsignaturasId, alumnoID = item.AlumnoId })
            </td>
        </tr>
}
    </tbody>
</table>
